= form_with model: @event_registration do |f|
  .row
    .input-field.col.s12
      = f.text_field :title
      = f.label :title

  .row
    .input-field.col.s12
      = f.text_field :event_start_date, class: 'datepicker'
      = f.label :event_start_date

  .row
    .input-field.col.s12
      = f.text_field :event_end_date, class: 'datepicker'
      = f.label :event_end_date

  .row
    .input-field.col.s12
      = f.text_field :event_start_time, class: 'timepicker'
      = f.label :event_start_time

  .row
    .input-field.col.s12
      = f.text_field :event_end_time, class: 'timepicker'
      = f.label :event_end_time

  .row
    .input-field.col.s12
      %i{class: 'material-icons prefix'}
        calendar_today
      = f.collection_select(:google_calendar_id, GoogleCalendar.all, :id, :name, prompt: true, selected: f.object.event.google_event.google_calendar_id)

  .row
    .input-field.col.s12
      = f.submit
